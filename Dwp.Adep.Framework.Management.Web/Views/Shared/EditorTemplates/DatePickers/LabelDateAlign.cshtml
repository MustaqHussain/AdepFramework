@model Nullable<DateTime>

<div class="row">
    <div class="w40">
        @Html.Label("")
    </div>
    <div class="w60">
       @{
            string tooltip = "";
            if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("Tooltip"))
            {
                tooltip = (string)ViewData.ModelMetadata.AdditionalValues["Tooltip"];
                @Html.TextBoxFor(x => x, new { Value = (Model.HasValue) ? Model.Value.ToString("dd/MM/yyyy") : "", @title = tooltip, @class = "date"})
            }
            else
            {
                @Html.TextBoxFor(x => x, new { Value = (Model.HasValue) ? Model.Value.ToString("dd/MM/yyyy") : "", @class = "date" })
            }

        }
    </div>
    <div class="row">
        @Html.ValidationMessage("")
    </div>
</div>