@model IEnumerable<Dwp.Adep.Framework.Management.Web.Models.OrganisationHierarchyModel>

@{
    ViewBag.Title = "OrganisationHierarchyView";
}

<h2>OrganisationHierarchyView</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
      <th>
            Code
        </th>
        <th>
            ParentOrganisationCode
        </th>
        <th>
            ChildOrganisationCode
        </th>
          <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentOrganisationCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChildOrganisationCode)
        </td>
          <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Code }) |
            @Html.ActionLink("Details", "Details", new { id=item.Code }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Code })
        </td>
    </tr>
}

</table>
