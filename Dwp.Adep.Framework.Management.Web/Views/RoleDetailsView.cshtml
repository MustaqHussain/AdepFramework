@model Dwp.Adep.Framework.Management.Web.ViewModels.RoleVM
@{
    ViewBag.Title = "";
}
<h2>test</h2>
<script type="text/javascript">
    /// <reference path="jquery-1.7.1.js" />
    /// <reference path="jquery-ui.js" />
    $(document).ready(function () {

        $.validator.setDefaults({
            ignore: ""
        });

        var isDirty = false;

        $(':input').change(function () {
            if (!isDirty) {
                isDirty = true;
            }
        });
	});
</script>
@using (Html.BeginForm("EditRole", "Role", FormMethod.Post, new { @id = "mainForm" }))
{
    @Html.ValidationSummary(true)
    <div class='message'>@Model.Message</div>
    @Html.HiddenFor(model => model.RoleItem.Code)
    <input type='hidden' id='IsDeleteConfirmed' name='IsDeleteConfirmed' value='@Model.IsDeleteConfirmed' />
    <input type='hidden' id='IsExitConfirmed' name='IsExitConfirmed' value='@Model.IsExitConfirmed' />
    <input type='hidden' id='IsNewConfirmed' name='IsNewConfirmed' value='@Model.IsNewConfirmed' />
    <div class="full-width clearfix">
        <div class="left-50">
		    <fieldset class="ui-widget ui-widget-content ui-corner-all">
                <legend class="ui-widget-header ui-corner-all">@Resources.LEGEND_DETAILS_OF_CUSTOMER</legend>
				<div class="full-width clearfix">
					<div class="editor-label left-40">
						@Html.LabelFor(model => model.RoleItem.ApplicationCode)
					</div>
					<div class="editor-field right-60">
						@Html.EditorFor(model => model.RoleItem.ApplicationCode)
					</div>
					<div class="full-width clearfix">
						@Html.ValidationMessageFor(model => model.RoleItem.ApplicationCode)
					</div>
				</div>
				<div class="full-width clearfix">
					<div class="editor-label left-40">
						@Html.LabelFor(model => model.RoleItem.RoleName)
					</div>
					<div class="editor-field right-60">
						@Html.EditorFor(model => model.RoleItem.RoleName)
					</div>
					<div class="full-width clearfix">
						@Html.ValidationMessageFor(model => model.RoleItem.RoleName)
					</div>
				</div>
				<div class="full-width clearfix">
					<div class="editor-label left-40">
						@Html.LabelFor(model => model.RoleItem.IsActive)
					</div>
					<div class="editor-field right-60">
						@Html.EditorFor(model => model.RoleItem.IsActive)
					</div>
					<div class="full-width clearfix">
						@Html.ValidationMessageFor(model => model.RoleItem.IsActive)
					</div>
				</div>
				<div class="full-width clearfix">
					<div class="editor-label left-40">
						@Html.LabelFor(model => model.RoleItem.RowIdentifier)
					</div>
					<div class="editor-field right-60">
						@Html.EditorFor(model => model.RoleItem.RowIdentifier)
					</div>
					<div class="full-width clearfix">
						@Html.ValidationMessageFor(model => model.RoleItem.RowIdentifier)
					</div>
				</div>
			</fieldset>
		</div>
	</div>
}
