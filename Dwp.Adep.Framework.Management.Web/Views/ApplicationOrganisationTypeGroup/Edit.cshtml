						<input id='DeleteButton' class='cancel' type='submit' name='Edit::DeleteApplicationOrganisationTypeGroup' value='@FixedResources.LABEL_DELETEBUTTON' title='@FixedResources.TOOLTIP_DELETEBUTTON @FixedResources.ENTITYNAME_APPLICATIONORGANISATIONTYPEGROUP'/>	            
		            }    
		            <input id='ExitButton' class='cancel' type='submit' name='Edit::ExitApplicationOrganisationTypeGroup' value='@FixedResources.LABEL_EXITBUTTON' title='@FixedResources.TOOLTIP_EXITBUTTON'/>
		        </div>
			</fieldset>
	</div>
}
